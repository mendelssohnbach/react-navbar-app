root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space

[*.{js,jsx,ts,tsx,css,html,json,yml}]
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
